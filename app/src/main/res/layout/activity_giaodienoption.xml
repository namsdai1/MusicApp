<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#CB48E3"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bogoc2"
        android:id="@+id/gg1">
    <ImageView
        android:id="@+id/ivgd1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/user"
        android:layout_centerVertical="true"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER"
            android:textSize="25dp"
            android:layout_below="@id/ivgd1"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bogoc2"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
       >
        <ImageView

            android:id="@+id/ivgd2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/music"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUSIC"
            android:textSize="25dp"
            android:layout_below="@id/ivgd2"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bogoc2"
        android:layout_below="@+id/gg1"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        >
        <ImageView

            android:id="@+id/ivgd3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/theme"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music genre"
            android:textSize="25dp"
            android:layout_below="@id/ivgd3"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textAlignment="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gg2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/bogoc2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/gg1"
        >
        <ImageView
            android:id="@+id/ivgd4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/hdicon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill"
            android:textSize="25dp"
            android:layout_below="@id/ivgd4"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textAlignment="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bogoc2"
        android:layout_below="@+id/gg2"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/gg3"
        >
        <ImageView
            android:id="@+id/ivgd5"
            android:layout_width="60dp"
            android:layout_height="60dp"
             android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/bar_chart"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kế"
            android:textSize="25dp"
            android:layout_below="@id/ivgd5"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textAlignment="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bogoc2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/gg2"

        >
        <ImageView

            android:id="@+id/ivgd6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/view"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Views"
            android:textSize="25dp"
            android:layout_below="@id/ivgd6"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            />
    </RelativeLayout>






</RelativeLayout>